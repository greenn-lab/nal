{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "@typescript-eslint"
  ],
  "rules": {
    "comma-dangle": "off",
    "curly": [
      "error",
      "all"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "never"
    ],
    "no-console": "warn",
    "no-param-reassign": "off",
    "no-unused-vars": "warn",
    "no-extend-native": [
      "error",
      {
        "exceptions": [
          "Date"
        ]
      }
    ],
    "@typescript-eslint/indent": [
      "error",
      2
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  },
  "settings": {
    "import/ignore": [
      "node_modules"
    ],
    "import/resolver": {
      "node": {
        "extensions": [
          ".ts",
          ".js"
        ]
      }
    },
    "import/extensions": [
      ".js",
      ".ts"
    ]
  }
}
