{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": true,
    "lib": [
      "es6",
      "esnext",
      "dom"
    ],
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "sourceMap": true,
    "types": [
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.test.ts",
    "./@types/*.d.ts"
  ]
}
